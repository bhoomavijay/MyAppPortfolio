<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="My Nanodegree Apps!"
        android:textSize="20dp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/movie"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/background_material_dark"
        android:text="POPULAR MOVIES"
        android:textColor="#fdffff"

        android:textStyle="bold" />

    <Button
        android:id="@+id/stock"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/background_material_dark"
        android:text="STOCK HAWK"
        android:textColor="#fdffff" />

    <Button
        android:id="@+id/buid"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/background_material_dark"
        android:text="BUID IT BIGGER"
        android:textColor="#fdffff" />

    <Button
        android:id="@+id/material"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/background_material_dark"
        android:text="MAKE YOUR APP MATERIAL"
        android:textColor="#fdffff" />

    <Button
        android:id="@+id/go_ubiquitous"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/background_material_dark"
        android:text="GO UBIQUITOUS"
        android:textColor="#fdffff" />

    <Button
        android:id="@+id/capstone"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/background_material_dark"
        android:text="CAPSTONE"
        android:textColor="#fdffff" />

</LinearLayout>
